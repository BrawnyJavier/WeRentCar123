@model IEnumerable<WeRentCar123.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Vehicles List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table style="width: 100%;" class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleModel.VehicleModelID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleNotes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VehicleID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VehicleID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VehicleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
