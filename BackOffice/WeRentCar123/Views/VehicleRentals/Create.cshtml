@model WeRentCar123.Models.VehicleRental

@{
    ViewData["Title"] = "Create";
}

<h1>Register a new Rental</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="VehicleRentalClientId" class="control-label">Client</label>
                <select asp-for="VehicleRentalClientId" class ="form-control" asp-items="ViewBag.VehicleRentalClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VehicleID" class="control-label">Vehicle</label>
                <select asp-for="VehicleID" class ="form-control" asp-items="ViewBag.VehicleID"></select>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="RentFromDate" class="control-label"></label>
                        <input asp-for="RentFromDate" class="form-control" type="date" />
                        <span asp-validation-for="RentFromDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="RentToDate" class="control-label"></label>
                        <input asp-for="RentToDate" class="form-control" type="date" />
                        <span asp-validation-for="RentToDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DailyRentalPrice" class="control-label"></label>
                        <input asp-for="DailyRentalPrice" class="form-control" />
                        <span asp-validation-for="DailyRentalPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
